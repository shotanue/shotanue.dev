{
  "$schema": "https://turbo.build/schema.json",
  "globalEnv": [
    "ESA_TOKEN",
    "ESA_TEAM_NAME",
    "ESA_CATEGORY",
    "HATENA_USERNAME",
    "QIITA_USERNAME"
  ],
  "ui": "stream",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "persistent": true
    }
  }
}
