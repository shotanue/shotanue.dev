{
  "$schema": "https://alps-io.github.io/schemas/alps.json",
  "alps": {
    "descriptor": [
      {
        "id": "identifier",
        "type": "semantic",
        "def": "https://schema.org/identifier"
      },
      {
        "id": "name",
        "type": "semantic",
        "def": "https://schema.org/name"
      },
      {
        "id": "articleBody",
        "type": "semantic",
        "def": "https://schema.org/articleBody"
      },
      {
        "id": "datePublished",
        "type": "semantic",
        "def": "https://schema.org/datePublished"
      },
      {
        "id": "dateModified",
        "type": "semantic",
        "def": "https://schema.org/dateModified"
      },
      {
        "id": "tag",
        "type": "semantic",
        "def": "https://schema.org/keywords",
        "descriptor": [{ "href": "#filterByTag" }]
      },
      {
        "id": "category",
        "type": "semantic",
        "def": "https://schema.org/category",
        "descriptor": [{ "href": "#filterByCategory" }]
      },
      {
        "id": "Readme",
        "type": "semantic",
        "def": "https://schema.org/description",
        "descriptor": [{ "href": "#articleBody" }]
      },
      {
        "id": "TagCollection",
        "type": "semantic",
        "def": "https://schema.org/Collection",
        "descriptor": [{ "href": "#tag" }],
        "tag": "collection"
      },
      {
        "id": "Article",
        "type": "semantic",
        "def": "https://schema.org/Article",
        "descriptor": [
          { "href": "#identifier" },
          { "href": "#name" },
          { "href": "#category" },
          { "href": "#TagCollection" },
          { "href": "#articleBody" },
          { "href": "#datePublished" },
          { "href": "#dateModified" }
        ]
      },
      {
        "id": "ArticleCollection",
        "type": "semantic",
        "def": "https://schema.org/Collection",
        "descriptor": [
          { "href": "#Article/identifier" },
          { "href": "#Article/name" },
          { "href": "#Article/category" },
          { "href": "#Article/tagCollection" },
          { "href": "#Article/datePublished" },
          { "href": "#Article/dateModified" },
          { "href": "#goArticle" }
        ],
        "tag": "collection"
      },
      {
        "id": "CategorizedArticleCollection",
        "type": "semantic",
        "def": "https://schema.org/Collection",
        "descriptor": [{ "href": "#ArticleCollection" }]
      },
      {
        "id": "TaggedArticleCollection",
        "type": "semantic",
        "def": "https://schema.org/Collection",
        "descriptor": [{ "href": "#ArticleCollection" }]
      },
      {
        "id": "Welcome",
        "type": "semantic",
        "def": "https://schema.org/Guide",
        "descriptor": [
          { "href": "#Readme" },
          {
            "href": "#ArticleCollection",
            "doc": { "value": "showing last 10 posts" }
          }
        ],
        "tag": "primary"
      },
      {
        "id": "goArticle",
        "type": "safe",
        "rt": "#Article",
        "descriptor": [{ "href": "#Article/identifier" }]
      },
      {
        "id": "filterByTag",
        "type": "safe",
        "rt": "#TaggedArticleCollection",
        "descriptor": [{ "href": "#tag" }]
      },
      {
        "id": "filterByCategory",
        "type": "safe",
        "rt": "#CategorizedArticleCollection",
        "descriptor": [{ "href": "#category" }]
      }
    ]
  }
}
